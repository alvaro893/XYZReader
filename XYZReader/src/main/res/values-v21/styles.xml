<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bacon" parent="@style/Theme.BaconGeneral">
        <!--the rest of the attributes are in styles.xml-->
        <item name="android:navigationBarColor">@color/light_green_600</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowExitTransition">@android:transition/slide_top</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowReturnTransition">@android:transition/fade</item>
        <item name="android:windowReenterTransition">@android:transition/slide_bottom</item>

        <item name="android:windowSharedElementEnterTransition">@transition/curve</item>

    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>